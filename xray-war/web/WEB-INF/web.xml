<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Person Module</display-name>
        <web-resource-collection>
            <web-resource-name>Person pages</web-resource-name>
            <description/>
            <url-pattern>/person/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>SECRETARY</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Contract Module Viewing</display-name>
        <web-resource-collection>
            <web-resource-name>Viewing</web-resource-name>
            <description/>
            <url-pattern>/contract/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>SECRETARY</role-name>
            <role-name>SUPERVISOR</role-name>
            <role-name>ASSISTANT</role-name>
            <role-name>EMPLOYEE</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Contract Module Editing</display-name>
        <web-resource-collection>
            <web-resource-name>Editing</web-resource-name>
            <description/>
            <url-pattern>/contract/*</url-pattern>
            <http-method>PUT</http-method>
            <http-method>POST</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <display-name>Timesheet Module Viewing</display-name>
        <web-resource-collection>
            <web-resource-name>View</web-resource-name>
            <description/>
            <url-pattern>/timesheet/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>SECRETARY</role-name>
            <role-name>ASSISTANT</role-name>
            <role-name>SUPERVISOR</role-name>
            <role-name>EMPLOYEE</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Timesheet Module Editing</display-name>
        <web-resource-collection>
            <web-resource-name>Edit</web-resource-name>
            <description/>
            <url-pattern>/timesheet/*</url-pattern>
            <http-method>PUT</http-method>
            <http-method>POST</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>SUPERVISOR</role-name>
            <role-name>ASSISTANT</role-name>
            <role-name>EMPLOYEE</role-name>
            <role-name>SECRETARY</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Timesheet Entry Module Viewing</display-name>
        <web-resource-collection>
            <web-resource-name>View</web-resource-name>
            <description/>
            <url-pattern>/timesheet-entry/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>SUPERVISOR</role-name>
            <role-name>ASSISTANT</role-name>
            <role-name>EMPLOYEE</role-name>
            <role-name>SECRETARY</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Timesheet Entry Module Editing</display-name>
        <web-resource-collection>
            <web-resource-name>Edit</web-resource-name>
            <description/>
            <url-pattern>/timesheet-entry/*</url-pattern>
            <http-method>PUT</http-method>
            <http-method>POST</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>EMPLOYEE</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>xray-realm</realm-name>
        <form-login-config>
            <form-login-page>/app/sign-in.xhtml</form-login-page>
            <form-error-page>/app/sign-in.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Secretary</description>
        <role-name>SECRETARY</role-name>
    </security-role>
    <security-role>
        <description>Supervisor</description>
        <role-name>SUPERVISOR</role-name>
    </security-role>
    <security-role>
        <description>Assistant</description>
        <role-name>ASSISTANT</role-name>
    </security-role>
    <security-role>
        <description>Employee</description>
        <role-name>EMPLOYEE</role-name>
    </security-role>
</web-app>
